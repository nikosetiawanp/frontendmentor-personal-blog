---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={import.meta.env.BASE_URL + "/assets/images/favicon-32x32.png"}
    />
    <meta name="generator" content={Astro.generator} />
    <title>Personal Blog</title>
  </head>
  <body class="pb-0 flex justify-center h-screen">
    <div class="w-full max-w-[640px] flex flex-col min-h-screen">
      <Navbar />

      <!-- Outer padding & content wrapper -->
      <div class="w-full px-2 flex-1">
        <!-- Borders -->
        <div
          class="min-h-full flex flex-col gap-8 lg:gap-12 border-x border-neutral-200 dark:border-neutral-700 pt-8 px-3 flex-1"
        >
          <slot class="flex-1" />
          <Footer />
        </div>
      </div>
    </div>
  </body>
</html>

<script>
  const root = document.documentElement;
  const savedTheme = localStorage.getItem("theme");
  if (savedTheme) {
    root.classList.add(savedTheme);
  }
</script>
