---
const { size } = Astro.props;
import GithubLogo from "../../public/assets/images/logo-github.svg";
import XLogo from "../../public/assets/images/logo-x.svg";
import LinkedinLogo from "../../public/assets/images/logo-linkedin.svg";
import FrontendmentorLogo from "../../public/assets/images/logo-frontend-mentor.svg";

const socials = [
  {
    name: "x",
    href: "",
    image: XLogo,
  },
  {
    name: "github",
    href: "",
    image: GithubLogo,
  },
  {
    name: "linkedin",
    href: "",
    image: LinkedinLogo,
  },
  {
    name: "frontend-mentor",
    href: "",
    image: FrontendmentorLogo,
  },
];
---

<ul
  class=`flex items-center ${size == 'large' ? 'gap-3' : 'gap-4'} list-none pl-0`
>
  {
    socials.map((social) =>
      size == "large" ? (
        // Large icon
        <li class="fill-neutral-0">
          <a
            href={social.name + "-logo"}
            class="flex justify-center items-center rounded-[10px] w-[40px] h-[40px] border border-neutral-200 dark:border-neutral-700 bg-neutral-0 dark:bg-neutral-800"
          >
            <social.image class="fill-neutral-700 dark:fill-neutral-0" />
          </a>
        </li>
      ) : (
        // Small icon
        <li class="fill-neutral-0">
          <a href="" class="">
            <social.image class="fill-neutral-600 dark:fill-neutral-400" />
          </a>
        </li>
      )
    )
  }
</ul>
